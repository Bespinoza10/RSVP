<!DOCTYPE html>
<html>
<head>
  <title>RSVP</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <!--Let browser know website is optimized for mobile-->
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
</head>
<body>
  <% if notice %>
    <div id="notice-wrapper">
      <p class="notice"><%= notice %></p>
    </div>
  <%elsif alert%>
    <div id="notice-wrapper">
      <p class="alert"><%= alert %></p>
    </div>
  <%end%>
  <% if current_page?(root_path)%>
    <div class="navbar-fixed">
      <nav>
        <div class="nav-wrapper">
          <div class="container">
            <a href="#!" class="brand-logo">Brandon & Thanya</a>
            <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">=</i></a>
            <ul class="right hide-on-med-and-down nav-links">
              <li><%= link_to "Home", root_path%></li>
              <!-- <li><a href="#about_us">About Us</a></li> -->
              <li><a href="#registry">Registry</a></li>
              <%if user_signed_in?%>
              <li><%= link_to "Your RSVPs", guests_path%></li>
              <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete%></li>
              <%else%>
              <li><%= link_to "RSVP", new_guest_path%></li>
              <li><%= link_to "Sign In", new_user_session_path%></li>
              <%end%>
            </ul>
            <ul class="side-nav" id="mobile-demo">
              <!-- <li><a href="sass.html">About Us</a></li> -->
              <!-- <li><a href="badges.html">Gallery</a></li> -->
              <li><%= link_to "Home", root_path%></li>
              <li><a href="#registry">Registry</a></li>
              <%if user_signed_in?%>
              <li><%= link_to "Your RSVPs", guests_path%></li>
              <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete%></li>
              <%else%>
              <li><%= link_to "RSVP", new_guest_path%></li>
              <li><%= link_to "Sign In", new_user_session_path%></li>
              <%end%>
            </ul>
          </div>
        </div>
      </nav>
    </div>
  <%end%>

  <%unless current_page?(root_path)%>
    <div class="navbar-fixed">
      <nav class="not_root_path_nav">
        <div class="nav-wrapper">
          <div class="container">
            <%=link_to "Brandon & Thanya", root_path, class: "brand-logo"%>
            <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">=</i></a>
            <ul class="right hide-on-med-and-down nav-links">
              <!-- <li><a href="#about_us">About Us</a></li> -->
              <li><%= link_to "Home", root_path%></li>
              <li><a href="http://www.espinozawedding.com/#registry">Registry</a></li>
              <%if user_signed_in?%>
              <li><%= link_to "Your RSVPs", guests_path%></li>
              <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete%></li>
              <%else%>
              <li><%= link_to "RSVP", new_guest_path%></li>
              <li><%= link_to "Sign In", new_user_session_path%></li>
              <%end%>
            </ul>
            <ul class="side-nav" id="mobile-demo">
              <!-- <li><a href="sass.html">About Us</a></li> -->
              <!-- <li><a href="badges.html">Gallery</a></li> -->
              <li><%= link_to "Home", root_path%></li>
              <li><a href="http://www.espinozawedding.com/#registry">Registry</a></li>
              <%if user_signed_in?%>
              <li><%= link_to "Your RSVPs", guests_path%></li>
              <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete%></li>
              <%else%>
              <li><%= link_to "RSVP", new_guest_path%></li>
              <li><%= link_to "Sign In", new_user_session_path%></li>
              <%end%>
            </ul>
          </div>
        </div>
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
      </nav>
    </div>
  <%end%>




<%= yield %>
  <script>
    $(".button-collapse").sideNav();
  </script>
</body>
</html>
