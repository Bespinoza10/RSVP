<div class="row">
    <div class="col s12">
      <%= form_for @guest do |f| %>
        <% if @guest.errors.any?%>
          <h2><%= pluralize(@guest.errors.count, "error") %> prevented this client from saving:</h2>
          <ul>
            <% @guest.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <%end%>
          </ul>
        <%end%>
        <div class="row">
          <div class="input-field col s4">
            <%= f.text_field :guest_name, {class: 'validate'}%>
            <label>Guest Name</label>
          </div>
          <div class="input-field col s4">
            <%= f.text_field :email, {class: 'validate'} %>
            <label data-error="wrong" data-success="right">Email</label>
          </div>
          <div class="input-field col s4">
            <%= f.number_field :number_of_guest, {class: 'validate'} %>
            <label>Number of Guests</label>
          </div>
        </div>
        <div class="row">
          <div class="col s12">
            <div class="input-field inline">
              <%= f.text_area :comments, {class: 'materialize-textarea'}%>
              <label>Comments</label>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <h5>Going? Yes or No?</h5>
            <%= f.check_box :yes_no, id: "yes", class: "chcBox" %>
            <label for="yes" id="yes">Yes? :)</label>
            <br>
            <%= f.check_box :no_yes, id: "no", class: "chcBox" %>
            <label for="no" id="no">No? :(</label>
          </div>
        </div>
        <br>
        <button class="btn waves-effect waves-light orange" type="submit" name="action">Submit
          <i class="material-icons right">send</i>
        </button>
      <%end%>
    </div>
  </div>

  <script>
    $('.chcBox').on('change', function() {
      $('.chcBox').not(this).prop('checked', false);
    });
  </script>
